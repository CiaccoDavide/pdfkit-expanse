{
  "name": "pdfkit-expanse",
  "version": "1.1.37",
  "description": "Easy PDF generation for NodeJS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepublish": "tsup",
    "build": "tsup",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CiaccoDavide/pdfkit-expanse.git"
  },
  "keywords": [
    "pdfkit",
    "html",
    "md",
    "markdown",
    "chartjs",
    "tables"
  ],
  "author": "ciaccodavide",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CiaccoDavide/pdfkit-expanse/issues"
  },
  "homepage": "https://github.com/CiaccoDavide/pdfkit-expanse#readme",
  "dependencies": {
    "chart.js": "^3.5.1",
    "chartjs-node-canvas": "^4.1.6",
    "cheerio": "1.0.0-rc.12",
    "juice": "^9.1.0",
    "parse5": "^7.1.2",
    "pdfkit": "^0.15.0",
    "postcss": "^8.4.31",
    "showdown": "^2.1.0",
    "stream": "^0.0.2",
    "svg-to-pdfkit": "^0.1.8"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.33",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/showdown": "^2.0.3",
    "@types/svg-to-pdfkit": "^0.1.2",
    "add": "^2.0.6",
    "jest": "^29.7.0",
    "or": "^0.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "yarn": "^1.22.19"
  }
}
